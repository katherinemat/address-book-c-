@{
  Layout="Shared/_Layout.cshtml";
}

<h1>My Address Book</h1>
@if (@Model.Count > 0) {
  @foreach (var contact in Model)
  {
    <h3><a href="/contact/@contact.GetId()">@contact.GetName()</a></h3>
  }
  <form action="/cleared" method="post">
    <button type="submit" class="btn" name="button">Clear all contacts</button>
  </form>
}

<p><a href="/contact/form">Add a new contact</a></p>
